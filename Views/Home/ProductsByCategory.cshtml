@using Apple_Clone_Website.Models
@model List<Product>

@{
    ViewBag.Title = "ProductsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="header-section col-8 py-5 lh-1">
        <div class="header">Store.</div>
        <div class="subheader">The best way to buy the products you love.</div>
    </div>
</div>
<!--  -->
<ul id='product-nav-list' class="nav-list m-0 pb-5 d-flex justify-content-between align-items-center">
    @Html.Action("Categories", "Home")
</ul>
<div class="row mb-2">
    <div class="title-section lh-1">
        <div class="header">All models.</div>
        <div class="subheader">Take your pick.</div>
    </div>
</div>

<div class="swiper mb-5">
    <div class="swiper-wrapper">

        @foreach (var i in Model)
        {
            var imgName = i.Image + ".jpg";
            <div class="swiper-slide">
                <a href="@Url.Action( "Details", "Products", new { id = i.ProductID })">
                    <div class="card">
                        <div class="content">
                            <div class="content-info">
                                <div class="content-name">@Html.DisplayName(i.Name)</div>
                                <div class="content-title">buy now</div>
                                <div class="content-desc">@Html.DisplayName(i.Description)</div>
                            </div>
                            <img class="content-image" src="~/Content/Images/Products/@imgName" alt="product">
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

</div>