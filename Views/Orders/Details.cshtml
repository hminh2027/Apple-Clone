@model Apple_Clone_Website.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="back">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-wrapper">
                    <div class="invoice-top">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="invoice-top-left">
                                    <h2>@Html.DisplayFor(model => model.Customer.Name)</h2>
                                    <h3>@Html.DisplayFor(model => model.Customer.Gender)</h3>
                                    <h5>@Html.DisplayFor(model => model.Customer.Country)</h5>

                                    <h4>Order</h4>
                                    <h6>@Html.DisplayFor(model => model.OrderedDate)</h6>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="invoice-top-right">
                                    <h2>Apple Store</h2>
                                    <h3>www.applestore.com</h3>
                                    <h5>applestore@icloud.com</h5>

                                    <!-- <div class="logo-wrapper">
                                        <img src="./Acme.png" class="img-responsive pull-right logo" />
                                    </div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="invoice-bottom">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="task-table-wrapper">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>PRODUCT ID</th>
                                                <th>UNIT PRICE</th>
                                                <th>QUANTITY</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="desc">
                                                    <h3>@Html.DisplayFor(model => model.OrderDetail.Product.Name)</h3>
                                                </td>
                                                <td><h4>$@Html.DisplayFor(model => model.OrderDetail.UnitPrice)</h4></td>
                                                <td><h4>@Html.DisplayFor(model => model.OrderDetail.Quantity)</h4></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-12">
                                <div class="invoice-bottom-total">
                                    <div class="col-sm-4 no-padding">
                                        <div class="total-box">
                                            <h6>TOTAL</h6>
                                            <h3></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-xs-12">
                                <hr class="divider">
                            </div>
                            <div class="col-sm-4">
                                <h6 class="text-left">@Html.DisplayFor(model => model.Customer.Name)</h6>
                            </div>
                            <div class="col-sm-4">
                                <h6 class="text-center">$@Html.DisplayFor(model => model.Customer.Email)</h6>
                            </div>
                            <div class="col-sm-4">
                                <h6 class="text-right">@Html.DisplayFor(model => model.Customer.Phone)</h6>
                            </div>
                        </div>
                        <div class="bottom-bar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>