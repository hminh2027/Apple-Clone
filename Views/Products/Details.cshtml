@model Apple_Clone_Website.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ImageSrc = Model.Image + ".jpg";
}

    <div class="detail-card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image"> <img src="~/Content/Images/Products/@ImageSrc" id="main_product_image" width="350"></div>
                    <div class="thumbnail_images">
                        <ul id="thumbnail">
                            <li><img onclick="changeImage(this)" src="~/Content/Images/Products/@ImageSrc" width="70"></li>
                            <li><img onclick="changeImage(this)" src="~/Content/Images/Products/@ImageSrc" width="70"></li>
                            <li><img onclick="changeImage(this)" src="~/Content/Images/Products/@ImageSrc" width="70"></li>
                            <li><img onclick="changeImage(this)" src="~/Content/Images/Products/@ImageSrc" width="70"></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>@Html.DisplayFor(model => model.Name)</h3>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>@Html.DisplayFor(model => model.Description)</p>
                    </div>
                    <h3>$@Html.DisplayFor(model => model.UnitPrice)</h3>
                    <div class="mt-5">
                        <span class="fw-bold">Color</span>
                        @Html.Action("Color", "Products", new { id = Model.ProductColorID.Trim() })
                    </div>
                    <div class="buttons d-flex flex-row mt-5 gap-3"><button class="btn btn-outline-dark">Add to Basket</button> </div>
                </div>
            </div>
        </div>
    </div>
    <h2 class="my-5 fw-bold text-center text-uppercase" style="font-weight: bold">Related products</h2>
    <div id="related-products" class="swiper mb-5">
        <div class="swiper-wrapper">
            @Html.Action("RelatedProducts", "Products", new { id = Model.CategoryID.Trim() })
            <div class="swiper-pagination swiper-pagination2"></div>
        </div>

    </div>
